@inherits ProductCategoriesNavMenuBase

@if (!ProductCategoryDtos.Any() && ErrorMessage == null)
{
  <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
  <displayerrormessage ErrorMessage=@ErrorMessage/>
}
else
{
  @foreach (var productCategory in ProductCategoryDtos)
  {
    string link = $"/ProductsByCategory/{productCategory.Id}";
    <div class="nav-item px-3">
      <NavLink class="nav-link" href="@link">
        <span aria-hidden="true" class="@productCategory.IconCSS"/>
        &nbsp;@productCategory.Name
      </NavLink>
    </div>
  }
}
