@page "/ProductDetails/{id:int}"
@inherits ProductDetailsBase

@if (Product == null && ErrorMessage == null)
{
  <DisplaySpinner/>

}
else if (ErrorMessage != null)
{
  <h3 class="text-danger">@ErrorMessage</h3>
}
else
{
  <h3 class="mb-5">Product details</h3>
  <div class="row">
    <div class="col-md-6 mb-4">
      <img src="@Product.ImageURL" class="img-fluid"/>
    </div>
    <div class="col-md-6">
      <h3>@Product.Name</h3>
      <p class="mb-4">@Product.Description</p>
      <p class="mb-4">
        <b>@Product.Price.ToString("C")&nbsp;(@Product.Qty items in stock)</b>
      </p>
      <button
        class="btn btn-primary"
        @onclick="() => AddToCart_Click(new CartItemToAddDto { CartId = HardCoded.CartId, ProductId = Product.Id, Qty = 1 })">
        Add to cart
      </button>
    </div>
  </div>
}
